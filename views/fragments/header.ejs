<header>
  <div class="logo-container">
    <img src="/images/logo.jpg" alt="Logo HelpMe" class="logo" />
    <span class="site-title">HelpMe!</span>
  </div>

  <div class="header-links">
    <a href="/tickets">Accueil</a>

    <% if (!user) { %>
    <a href="/users/register">Créer un compte</a>
    <a href="/users/login">Se connecter</a>
    <% } else { %>
    <span>Bonjour <strong><%= user.username %></strong></span>
    <a href="/users/logout">Se déconnecter</a>
    <% } %>
  </div>
</header>
